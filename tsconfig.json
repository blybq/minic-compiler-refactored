{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./source",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "exclude": [
    "node_modules/**/*",
    "**/*.test.ts"
  ],
  "include": [
    "source/**/*"
  ]
}

